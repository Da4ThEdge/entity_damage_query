{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "edge:dmgpoint_particle",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/dmgpoint"
			}
		},
		"components": {
